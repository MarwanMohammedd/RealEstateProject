@if (@TempData["error"] is not null)
{
    <style>
        /* Warning Card Modal Styles */
        .warning-card {
            background-color: #fff3cd;
            /* Light yellow background */
            border-color: #ffeeba;
            /* Light yellow border */
            color: #856404;
            /* Dark yellow text color */
        }

        .warning-card .modal-title {
            font-weight: bold;
        }

        .warning-card .modal-body {
            font-size: 1rem;
        }

        .warning-card .btn-warning {
            background-color: #ffc107;
            /* Warning color */
            border-color: #ffc107;
            color: #212529;
            font-weight: bold;
        }

        .warning-card .btn-warning:hover {
            background-color: #e0a800;
            /* Darker yellow on hover */
            border-color: #d39e00;
        }

        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.5);
            /* Slight dark overlay */
        }

        .modal-backdrop.show {
            backdrop-filter: blur(8px);
            /* Apply blur effect to backdrop */
        }
    </style>
    <!-- Warning Modal -->
    <div class="modal fade" id="warningModal" tabindex="-1" aria-labelledby="warningModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content warning-card border-warning">
                <div class="modal-header">
                    <h5 class="modal-title text-warning" id="warningModalLabel">Warning</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>This is a warning message. It is used to display alerts or important notices to users. The styling
                        ensures that it grabs attention and communicates urgency.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Take Action</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <!-- JavaScript to Automatically Show Modal -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var warningModal = new bootstrap.Modal(document.getElementById('warningModal'), {
                backdrop: 'static',
                keyboard: false
            });
            warningModal.show();
        });
    </script>
}
