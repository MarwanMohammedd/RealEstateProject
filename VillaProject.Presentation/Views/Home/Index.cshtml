@model HomeViewModel
<div>
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="\Images\slide1.jpg" class="d-block w-100" alt="....">
            </div>
            <div class="carousel-item">
                <img src="\Images\slide2.jpeg" class="d-block w-100" alt="....">
            </div>
            <div class="carousel-item">
                <img src="\Images\slide3.jpeg" class="d-block w-100" alt="....">
            </div>
        </div>
        <div class="carousel-item">
            <img src="\Images\slide3.jpeg" class="d-block w-100" alt="....">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<form method="post" style="background-color: aliceblue;">
    <div class="row p-0 mx-0 py-4">
        <div class="col-12 col-md-5 offset-md-1 pl-2 pr-2 pr-md-0">
            <div class="form-group">
                <label>Check In Date</label>
                <input asp-for="CheckInDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="col-8 col-md-3 pl-2 pr-2">
            <div class="form-group">
                <label>No. of Nights</label>
                <select class="form-select">
                    @for (int i = 1; i < 11; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-4 col-md-2 pt-4 pr-2">
            <div class="form-group">
                <button type="button" class="btn btn-success btn-block">
                    <i class="bi bi-search"></i> &nbsp; Check Availability
                </button>
            </div>
        </div>
    </div>

    <div id="VillaList">
        @foreach(var villa in Model.VillaList){
        <div class="row px-lg-5 m-lg-4 m-sm-0 px-sm-0" style="--bs-gutter-x:0">
                <div class="p-4 col-md-12 col-lg-6">
                    <div class="row" style="border-radius: 5px; border: 1px solid #000">
                        <div class="col-4 p-2">
                            <img class="d-black w-100" style="border-radius: 5px;" src="https://placehold.co/600x400">
                        </div>
                        <div class="col-8">
                            <div class="d-flex justify-content-between">
                                <p class="card-title text-warning" style="font-size: xx-large;">@villa.VillaName</p>
                                <div class="pt-2">
                                    <button type="button" class="btn btn-sm btn-outline-success" data-bs-toggle="modal"
                                        data-bs-target="#exampleModel-@(11)">Details</button>
                                </div>
                            </div>
                            <p class="card-text">@villa.Description</p>
                        </div>
                        <div class="col-12">
                            <div class="row pd-3 pt-2">
                                <div class="col-4"> <a class="btn btn-success form-control btn-block">Book</a></div>
                            </div>
                        </div>
                        <div class="col-4">
                            <span class="">Max Occupancy : @villa.Occupancy </span><br />
                            <span class="pt-1">Villa Size : 11 sqft </span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-ed font-weight-bold pt-1" style="font-size: 25px;"> USD
                                <span style="border-bottom: 1px solid #022042;">$@Math.Round(@villa.Price ,2)
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="exampleModel-@(11)" tabindex="-1" aria-labelledby="exmapleModelLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-x1" style="border: 1px solid #aaa; border-radius: 7px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-3 text-success" id="exmapleModelLabel">Villa Details</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body m-0"> Villa Details</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
                
            </div>
            
        </div>
        }
    </form>
    </div>