@model IEnumerable<VillaProject.Domain.Entities.Amenity>

<div class="w-100 card border-0 p-4">
    <h1>Amentiy</h1>
</div>

<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>VillaID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model)
            {
                <tr>
                    <td>@value.Name</td>
                    <td>@value.Description</td>
                    <td>@value.VillaID</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Amenity" asp-action="Update" asp-route-ID="@value.ID"
                                class="btn btn-secondary mx-2">Edit</a>
                            <a asp-controller="Amenity" asp-action="Delete" asp-route-ID="@value.ID"
                                class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <!-- For Refare to Villa Controller and Asp Action-->
    <a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary">Create New Amenity </a>
</div>