@model Villa

<div class="h-100 d-flex align-items-center justify-content-center">
    <h1>Create New Villa</h1>
</div>
<div>
    <form method="post" class="row" enctype="multipart/form-data">
        <div class="p-3">
            <div class="form-floating py-1 col-12">
                <input asp-for="VillaName" class="form-control border shadow" />
                <label asp-for="VillaName" class="ms-2 text-dark"></label>
                <span asp-validation-for="VillaName" class="text-danger"></span>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="Description" class="form-control border shadow" />
                <label asp-for="Description" class="ms-2 text-dark"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-floating py-1 col-12">
                <input asp-for="Price" class="form-control border shadow" />
                <label asp-for="Price" class="ms-2 text-dark"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="form-floating py-1 col-12">
                <input asp-for="Occupancy" class="form-control border shadow" />
                <label asp-for="Occupancy" class="ms-2 text-dark"></label>
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="ImageUrl" hidden class="form-control border shadow " />
                <input asp-for="Image" class="form-control border shadow " />
                <label asp-for="ImageUrl" class="ms-2 text-dark"></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                </div>
            </div>
    </form>
</div>

<!--Client-Side Validation-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}