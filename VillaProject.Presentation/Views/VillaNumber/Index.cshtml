@model IEnumerable<VillaNumber>

<div class="w-100 card border-0 p-4">
    <h1>Villa Number</h1>
</div>

<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Villa</th>
                <th>Villa Room ID</th>
                <th>More Information</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model)
            {
                <tr>
                    <td>@value.Villa.VillaName</td>
                    <td>@value.VillaNumberID</td>
                    <td>@value.MoreInformation</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="VillaNumber" asp-action="Update" asp-route-ID="@value.VillaNumberID"
                                class="btn btn-secondary mx-2">Edit</a>
                            <a asp-controller="VillaNumber" asp-action="Delete" asp-route-ID="@value.VillaNumberID"
                                class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <!-- For Refare to Villa Controller and Asp Action-->
    <a asp-controller="VillaNumber" asp-action="Create" class="btn btn-secondary">Create New VillaNumber </a>
</div>