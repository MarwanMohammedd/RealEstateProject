@model VillaNumberViewModel

<div class="h-100 d-flex align-items-center justify-content-center">
    <h1>Create Villa Number</h1>
</div>
<div>
    <form method="post" class="row">
        <div class="p-3">
            <div class="form-floating py-1 col-12">
                <select asp-for="@Model.VillaNumber!.VillaID" asp-items="@Model.VillaList"
                    class="form-select border shadow">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <label asp-for="VillaNumber!.VillaID" class="ms-2 text-dark"></label>
                <span asp-validation-for="VillaNumber!.VillaID" class="text-danger"></span>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="VillaNumber!.VillaNumberID" class="form-control border shadow " />
                <label asp-for="VillaNumber!.VillaNumberID" class="ms-2 text-dark"></label>
                <span asp-validation-for="VillaNumber!.VillaNumberID" class="text-danger"></span>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="VillaNumber!.MoreInformation" class="form-control border shadow" />
                <label asp-for="VillaNumber!.MoreInformation" class="ms-2 text-dark"></label>
                <span asp-validation-for="VillaNumber!.MoreInformation" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                </div>
            </div>
    </form>
</div>

<!--Client-Side Validation-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}