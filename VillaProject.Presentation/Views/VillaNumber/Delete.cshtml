@model VillaNumberViewModel

<div class="h-100 d-flex align-items-center justify-content-center">
    <h1>Delete Villa Number</h1>
</div>

<div>
    <form method="post" class="row">
        <input asp-for="@Model.VillaNumber!.VillaNumberID" hidden />
        <div class="p-3">

            <div class="form-floating py-1 col-12">
                <select disabled asp-for="@Model.VillaNumber!.VillaID" asp-items="@Model.VillaList"
                    class="form-select bordred shadow">
                </select>
                <label asp-for="@Model.VillaNumber!.VillaID" class="ms-2 text-dark"></label>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="@Model.VillaNumber!.VillaNumberID" disabled="disabled"
                    class="form-control border shadow" />
                <label asp-for="@Model.VillaNumber!.VillaNumberID" class="ms-2 text-dark"></label>
            </div>

            <div class="form-floating py-1 col-12">
                <input asp-for="@Model.VillaNumber!.MoreInformation" disabled="disabled"
                    class="form-control border shadow" />
                <label asp-for="@Model.VillaNumber!.MoreInformation" class="ms-2 text-dark"></label>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                </div>
            </div>
    </form>
</div>

<!--Client-Side Validation-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}